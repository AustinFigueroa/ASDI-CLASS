var game1 = {
	"name": "Rayman 2 The Great Escape",
	"platform": "PlayStation 2",
	"genre": "Platform",
	"mode": "Single-player",
	"gameBeat": "Yes",
	"gameNotBeat": "No",
	"answer": function(){
		if(game1.gameBeat === "Yes"){
			alert("You beat the game!");
		}
		if(game1.gameNotBeat === "No"){	
				alert("You didnt beat the game...");
		}
	}
};

